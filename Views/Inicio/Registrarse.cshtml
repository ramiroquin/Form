@model Portafolio.Models.Usuario;
@{
    Layout = null;
}


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>


</head>
<body>
    <div class="container-fluid">
        <div class="row vh-100">
            <div class="nombre col">
                <p>Nomi Group</p>
            </div>
            <div class="datos col">
                <form asp-controller="Inicio" asp-action="Registrarse" method="post">
                    <p class="titulo">Registrarse</p>

                    <div class="form__datos">
                        <div class="cargar">
                            <label>Nombre Completo</label><br />
                            <input type="text" asp-for="NombreUsuario" required />
                        </div>
                        <div class="cargar">
                            <label>Correo</label><br />
                            <input type="email" asp-for="Correo" required />
                        </div>
                        <div class="cargar">
                            <label>Contraseña</label><br />
                            <input type="password" asp-for="Clave" required />
                        </div>
                        <button type="submit">Registrate</button>
                    </div>
                    <p>¿ya tienes cuenta? <a href="@Url.Action("IniciarSesion","Inicio")">Iniciar Sesion</a></p>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
